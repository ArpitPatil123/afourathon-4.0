{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "ESNext",                                
    "rootDir": "./src",                                  
    "moduleResolution": "Node",                     
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
}
