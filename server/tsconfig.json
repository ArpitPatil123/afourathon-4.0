{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "ES6",                                
    "rootDir": "./src",                              
    "moduleResolution": "Node",                     
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                            
  },
  "include": ["src/**/*", "src/jest.mongodb.config.ts"],
}
